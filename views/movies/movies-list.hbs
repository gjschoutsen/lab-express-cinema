<h1>Ironhack Cinema</h1>
<h3>Click on the movies to see the showtimes!</h3>

{{#each movies}}
    <section>
        <img src="{{this.image}}" alt="{{this.title}} poster">
        <h2>{{this.title}}</h2>
        
        <a href="/movies-list/{{this.id}}">Details</a>
        <a href="/movies-list/{{this.id}}/edit">Edit</a>
         <form action="/movies-list/{{this.id}}/delete" method="POST">
            <button>Delete</button>
        </form>
        
    </section>
{{/each}}
<br>
<a href="/">Back</a>